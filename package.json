{
    "name": "api-files",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "build": "tsc",
        "clean": "rimraf dist",
        "start": "npm run build && npm run copy-files && node dist/index.js",
        "dev": "nodemon src/index.ts",
        "init": "npm install -D -s",
        "copy-files": "npm run copy-views && npm run copy-public",
        "copy-views": "copyfiles -u 1 \"./src/views/**/*.ejs\" \"dist\"",
        "copy-public": "copyfiles -u 1 \"./src/public/**/*.*\" \"dist\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.7.3",
        "cors": "^2.8.5",
        "dropbox": "^10.34.0",
        "express": "^4.19.2",
        "firebase": "^10.12.5",
        "isomorphic-fetch": "^3.0.0",
        "mime-types": "^2.1.35",
        "morgan": "^1.10.0",
        "node-fetch": "^3.3.2",
        "sharp": "^0.33.4",
        "typescript": "^5.5.4",
        "uuid": "^10.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/isomorphic-fetch": "^0.0.39",
        "@types/mime-types": "^2.1.4",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.1.0",
        "@types/uuid": "^10.0.0",
        "copyfiles": "^2.4.1",
        "dotenv": "^16.4.5",
        "nodemon": "^3.1.4",
        "rimraf": "^3.0.2",
        "ts-node": "^10.9.2"
    }
}
